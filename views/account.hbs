<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0"> <!-- Displays site properly based on user's device -->
    <link rel="icon" type="image/png" sizes="32x32" href="/account-img/images/favicon-32x32.png">
    <title>Account Management</title>

    <link rel="stylesheet" href="/account-css/style.css">
</head>
<body>
    <header style="position: absolute;">
		<div class="logo">
			<h2 style="font-size:20px">Online Banking</h2>
		</div>
        <ul>
            <li><a href="/main" >Home</a></li>
            <li><a href="/profile">Profile</a></li>
            <li><a href="#" class="active">Account</a></li>
            <li><a href="/inbox">Notification</a></li>
            <li><a href="#">About Us</a></li>
        </ul>
        <a class="logout" href="/logout"><button>Logout</button></a>
    </header>
    <main class="wrapper">
        <div class="image__wrapper">
            <div class="image__wrapper_inner">

            </div>
            <img class="box" src="/account-img/images/illustration-box-desktop.svg" alt="box">
        </div>
        <div class="accordion__wrapper">
            <h1 class="title__accordion">Account Management</h1>
            <div class="questions__accordions">
                <div class="question-answer__accordion" id="Savings">
                    <div class="question">
                        <h3 class="title__question">
                            Savings
                        </h3>
                        <img src="/account-img/images/icon-arrow-down.svg" >
                    </div>
                    <div class="answer" style="width: 100%;float:left">
                        Account Number: NO EXISTING ACCOUNT
                    </div>
                    <div class="answer">
                        <div style="width:50%;float:left; margin-bottom:25px" >
                            Balance: NULL
                        </div>
                        <div style="width:21%;float:right">
                             <a class="logout" href="#"><button style=" border-radius: inherit;color: whitesmoke;font-weight: bold; padding: 5px 15px;top:-35px;position:relative">Delete</button></a>
                        </div>
                       
                    </div>
                   
                    
                </div>

                <div class="question-answer__accordion" id="Current">
                    <div class="question">
                        <h3 class="title__question">
                            Current
                        </h3>
                        <img src="/account-img/images/icon-arrow-down.svg" >
                    </div>
                    <div class="answer">
                        Account Number: NO EXISTING ACCOUNT
                    </div>
                    <div class="answer">
                        <div style="width:50%;float:left; margin-bottom:25px" >
                            Balance: NULL
                        </div>
                        <div style="width:21%;float:right">
                             <a class="logout" href="#"><button style=" border-radius: inherit;color: whitesmoke;font-weight: bold; padding: 5px 15px;top:-35px;position:relative">Delete</button></a>
                        </div>
                       
                    </div>
                </div>

                <div class="question-answer__accordion" id="Loan">
                    <div class="question">
                        <h3 class="title__question">
                            Home Loan
                        </h3>
                        <img src="/account-img/images/icon-arrow-down.svg" >
                    </div>
                    <div class="answer">
                        Account Number: NO EXISTING ACCOUNT
                    </div>
                    <div class="answer">
                        <div style="width:50%;float:left; margin-bottom:25px" >
                            Loan Due: NULL
                        </div>
                        <div style="width:21%;float:right">
                             <a class="logout" href="#"><button style=" border-radius: inherit;color: whitesmoke;font-weight: bold; padding: 5px 15px;top:-35px;position:relative">Delete</button></a>
                        </div>
                       
                    </div>
                </div>

                <div class="question-answer__accordion" id="Credit">
                    <div class="question">
                        <h3 class="title__question">
                            Credit Card
                        </h3>
                        <img src="/account-img/images/icon-arrow-down.svg" >
                    </div>
                    <div class="answer">
                        Account Number: NO EXISTING ACCOUNT
                    </div>
                    <div class="answer">
                        <div style="width:50%;float:left; margin-bottom:25px" >
                            Card Due: NULL
                        </div>
                        <div style="width:21%;float:right">
                             <a class="logout" href="#"><button style=" border-radius: inherit;color: whitesmoke;font-weight: bold; padding: 5px 15px;top:-35px;position:relative">Delete</button></a>
                        </div>
                       
                    </div>
                </div>
                
                <input type="text" class="accountData" value="{{data}}" style="display: none;">
            </div>
        </div>
    </main>
    <script>
        var data= JSON.parse(document.querySelector(".accountData").value);
        var contentSavings='<div class="question"><h3 class="title__question"> Savings</h3><img src="/account-img/images/icon-arrow-down.svg" ></div>';
        var contentCurrent='<div class="question"><h3 class="title__question"> Current</h3><img src="/account-img/images/icon-arrow-down.svg" ></div>';
        var contentLoan='<div class="question"><h3 class="title__question"> Home Loan</h3><img src="/account-img/images/icon-arrow-down.svg" ></div>';
        var contentCredit='<div class="question"><h3 class="title__question"> Credit Card</h3><img src="/account-img/images/icon-arrow-down.svg" ></div>';
        var flag1=0;
        var flag2=0;
        var flag3=0;
        var flag4=0;
        
        for(i=0; i<data.length;i++){
            if(data[i].category=="savings"){
                flag1=1;
                console.log(flag1)
                contentSavings=contentSavings+'<div class="answer" style="width: 100%;float:left">Account Number:'+data[i].accountno+'</div><div class="answer"><div style="width:50%;float:left; margin-bottom:25px" >Balance: Rs. '+data[i].balance+'</div><div style="width:21%;float:right"><a class="logout" href="#"><button style=" border-radius: inherit;color: whitesmoke;font-weight: bold; padding: 5px 15px;top:-35px;position:relative">Delete</button></a></div></div>';
            }
            if(data[i].category=="current"){
                flag2=1;
                contentCurrent=contentCurrent+'<div class="answer" style="width: 100%;float:left">Account Number:'+data[i].accountno+'</div><div class="answer"><div style="width:50%;float:left; margin-bottom:25px" >Balance: Rs. '+data[i].balance+'</div><div style="width:21%;float:right"><a class="logout" href="#"><button style=" border-radius: inherit;color: whitesmoke;font-weight: bold; padding: 5px 15px;top:-35px;position:relative">Delete</button></a></div></div>';
            }
            if(data[i].category=="homeloan"){
                flag3=1;
                contentLoan=contentLoan+'<div class="answer" style="width: 100%;float:left">Account Number:'+data[i].accountno+'</div><div class="answer"><div style="width:50%;float:left; margin-bottom:25px" >Balance: Rs. '+data[i].balance+'</div><div style="width:21%;float:right"><a class="logout" href="#"><button style=" border-radius: inherit;color: whitesmoke;font-weight: bold; padding: 5px 15px;top:-35px;position:relative">Delete</button></a></div></div>';
            }
            if(data[i].category=="creditcard"){
                flag4=1;
                contentCredit=contentCredit+'<div class="answer" style="width: 100%;float:left">Account Number:'+data[i].accountno+'</div><div class="answer"><div style="width:50%;float:left; margin-bottom:25px" >Balance: Rs. '+data[i].balance+'</div><div style="width:21%;float:right"><a class="logout" href="#"><button style=" border-radius: inherit;color: whitesmoke;font-weight: bold; padding: 5px 15px;top:-35px;position:relative">Delete</button></a></div></div>';
            }
        }
        
        if (flag1==1){
            document.getElementById("Savings").innerHTML=contentSavings;
        }
        if (flag2==1){
            document.getElementById("Current").innerHTML=contentCurrent;
        }
        if (flag3==1){
            document.getElementById("Loan").innerHTML=contentLoan;
        }
        if (flag4==1){
            document.getElementById("Credit").innerHTML=contentCredit;
        }
        
    </script>
    
    <script src="/account-script/script.js"></script>
</body>
</html>