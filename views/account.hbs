            }
            if(data[i].category=="current"){
                flag2=1;
                contentCurrent=contentCurrent+'<div class="answer" onclick=viewAccount('+data[i].accountno+') style="width: 50%;float:left">Account Number:'+data[i].accountno+'</div><div class="answer"><div style="width:50%;float:left; margin-bottom:25px" >Balance: Rs. '+data[i].balance+'</div><div style="width:100%;float:right;height:30px;padding-top:10px"><a class="logout" href="#"><button style=" margin-right: 13%; border-radius: inherit;color: whitesmoke;font-weight: bold; padding: 5px 15px;top:-35px;position:relative">Fund Transfer</button><button style=" border-radius: inherit;color: whitesmoke;font-weight: bold; padding: 5px 15px;top:-35px;position:relative" onclick=deleteAccount('+data[i].accountno+')>Delete</button></a></div></div>';
